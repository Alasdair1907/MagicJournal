<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/tmwdb</property>

        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.use_sql_comments">true</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="connection.username">tmw_web</property>
        <property name="connection.password">1234567</property>

        <property name="show_sql">false</property>
        <property name="format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="world.thismagical.entity.AuthorEntity"/>
        <mapping class="world.thismagical.entity.SessionEntity"/>
        <mapping class="world.thismagical.entity.ImageFileEntity"/>
        <mapping class="world.thismagical.entity.PhotoEntity"/>
        <mapping class="world.thismagical.entity.TagEntity"/>
        <mapping class="world.thismagical.entity.GalleryEntity"/>
        <mapping class="world.thismagical.entity.ArticleEntity"/>
        <mapping class="world.thismagical.entity.RelationEntity"/>
        <mapping class="world.thismagical.entity.KeyValueEntity"/>
        <mapping class="world.thismagical.entity.OtherFileEntity"/>
        <mapping class="world.thismagical.entity.PostIndexItem"/>

        <!-- DB schema will be updated if needed -->

    </session-factory>
</hibernate-configuration>